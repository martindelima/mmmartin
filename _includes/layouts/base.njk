<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
			{% if page.url != '/' %}{{ title }}&nbsp;|&nbsp;{%- endif %}{{ metadata.title }}
		</title>
    <meta name="description" content="{{ description or metadata.description }}">
		<link rel="icon" href="/img/favicons/favicon.ico" sizes="any">
		<link rel="icon" href="/img/favicons/favicon.svg" type="image/svg+xml">
		<link rel="apple-touch-icon" href="/img/favicons/apple-touch-icon.png">
		<link rel="manifest" href="/site.webmanifest">
		<meta name="theme-color" content="rgb(255, 69, 0)">
    <link rel="stylesheet" href="{{ '/css/index.min.css' | url }}">
    <link rel="alternate" href="{{ metadata.feed.path | url }}" type="application/atom+xml" title="{{ metadata.title }}">
    <link rel="alternate" href="{{ metadata.jsonfeed.path | url }}" type="application/json" title="{{ metadata.title }}">
  </head>
  <body>
    <header>
      <h1><a href="{{ '/' | url }}">{{ metadata.title }}</a></h1>

      <nav>
      {%- for entry in collections.all | eleventyNavigation %}
        <a class="nav__item {% if entry.url in page.url %}is-active{% endif %}" href="{{ entry.url | url }}">{{ entry.title }}</a>
      {%- endfor %}
      </nav>
    </header>

    <main{% if templateClass %} class="{{ templateClass }}"{% endif %}>
      {{ content | safe }}
    </main>

    {# <footer></footer> #}
  </body>
</html>
